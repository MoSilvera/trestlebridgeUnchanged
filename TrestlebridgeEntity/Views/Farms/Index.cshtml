@model IEnumerable<TrestlebridgeEntity.Models.Farm>

@{
    ViewData["Title"] = "Farms";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.RegisteredName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Acres)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Facilities)
            </th>
            <th>
                Animals
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @{ 

            foreach (var item in Model)
            {
                var animals = item.Facilities.Select(f => f.Animals.Count).Sum();

                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.RegisteredName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Acres)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Facilities.Count)
                    </td>
                    <td>
                        @animals
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
